<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">


    <TextView
            android:id="@+id/bonjour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:id="@+id/etatcmd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/bonjour"
            app:layout_constraintTop_toBottomOf="@+id/bonjour"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>
    <Button
            android:id="@+id/choose"
            android:layout_width="368dp"
            android:layout_height="58dp"
            android:background="@drawable/button_background"
            android:text="Joindre une photo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21sp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.454" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/etatcmd"/>
    <Button
            android:id="@+id/commande"
            android:layout_width="368dp"
            android:layout_height="58dp"
            android:background="@drawable/button_background"
            android:text="Valider la commande"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21sp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/choose" android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/logout"
            android:layout_width="368dp"
            android:layout_height="58dp"
            android:background="@drawable/button_background"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21sp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/commande"/>
</androidx.constraintlayout.widget.ConstraintLayout>